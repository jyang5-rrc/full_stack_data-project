<div class="container mt-4 pb-5" id="category">
  <h2>Brands</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Brand Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @brands.each_with_index do |brand, index| %>
          <tr>
            <td><%= (index + 1) + ((@brands.current_page - 1) * @brands.limit_value) %></td>
            <td><%= brand.brand_name %></td>
            <td>
              <%= link_to 'Show Products', show_products_brand_path(brand), class: 'btn btn-primary btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="pagination-container d-flex justify-content-center my-4">
    <%= paginate @brands, class: 'pagination' %>
  </div>

</div>
