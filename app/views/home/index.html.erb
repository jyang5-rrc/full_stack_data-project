
<header>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid"> <!-- Changed to container-fluid for full width -->
      <a class="navbar-brand" href="#">
        <%= image_tag 'logo.png', alt: 'Logo', class: 'img-fluid'%> <!-- Adjusted logo size -->
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav", >
        <ul class="navbar-nav me-auto"> <!-- me-auto to align search form to the right -->
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: 'nav-link ' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Category', categories_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Brand', brands_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Product Type', product_types_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'About', about_path, class: 'nav-link' %>
          </li>
        </ul>
        <form class="d-flex" method="get" action="<%= search_path %>">
          <input class="form-control me-2" type="search" name="search" placeholder="Search products" aria-label="Search">
          <select class="form-select me-2" name="search_option">
            <option value="product">Product name</option>
            <option value="category">Category</option>
            <option value="brand">Brand</option>
            <option value="product_type">Product Type</option>
            <option value="product_tag">Product Tag</option>
          </select>
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
</header>


<main class="container mt-4">
  <section id="recommended-products" class="mb-5">
    <!-- Recommended Products will go here -->
    <section id="recommended-products" class="mb-5">
      <h2>Recommended Products</h2>
      <div class="row mt-3">
        <% @recommended_products.each do |product| %>
          <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
              <%= image_tag product.image_link, class: "card-img-top", alt: product.product_name %>
              <div class="card-body">
                <h5 class="card-title"><%= product.product_name %></h5>
                <p class="card-text">$<%= product.price %></p>
                <p class="card-text">Rating: <%= product.rating %></p>
                <%= link_to 'View', product_path(product), class: 'btn btn-primary btn-view' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>

  </section>

  <section id="categories-section" class="mb-5">
    <h2>Categories</h2>
    <div class="mt-1 d-flex justify-content-center">
        <%= link_to 'All Categories', categories_path, class: 'text-dark p-2' %>
    </div>
    <div class="row mt-3">
        <% @categories.each do |category| %>
            <div class="col-md-2 mb-3">
                <div class="p-2 bg-light d-flex justify-content-center align-items-center">
                    <%= link_to category.category_name, show_products_category_path(category), class: 'text-dark text-decoration-none' %>
                </div>
            </div>
        <% end %>
    </div>
  </section>

  <section id="brands" class="mb-5">
    <!-- Brands will go here -->
    <h2>Brands</h2>
    <div class="mt-1 d-flex justify-content-center">
        <%= link_to 'All Brands', brands_path, class: 'text-dark p-2' %>
    </div>
    <div class="row mt-3">
        <% @brands.each do |brand| %>
            <div class="col-md-2 mb-3">
                <div class="p-2 bg-light d-flex justify-content-center align-items-center">
                    <%= link_to brand.brand_name, show_products_brand_path(brand), class: 'text-dark text-decoration-none' %>
                </div>
            </div>
        <% end %>
    </div>
  </section>

  <section id="product-types">
    <!-- Product Types will go here -->
    <h2>Product Types</h2>
    <div class="mt-1 d-flex justify-content-center">
        <%= link_to 'All types', product_types_path, class: 'text-dark p-2' %>
    </div>
    <div class="row mt-3">
        <% @product_types.each do |product_type| %>
            <div class="col-md-2 mb-3">
                <div class="p-2 bg-light d-flex justify-content-center align-items-center">
                    <%= link_to product_type.product_type_name, show_products_product_types_path(product_type), class: 'text-dark text-decoration-none' %>
                </div>
            </div>
        <% end %>
    </div>
  </section>
</main>
