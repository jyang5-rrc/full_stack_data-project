<div class="container mt-4 pb-5" id="category">
  <h2>Product Types</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product type Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @product_types.each_with_index do |product_type, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= product_type.product_type_name %></td>
            <td>
              <%= link_to 'Show Products', show_products_product_type_path(product_type), class: 'btn btn-primary btn-sm ' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>